<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFToast.Views.MainPage"
             Title="XFToast"
             Padding="16"
             Visual="Material">

    <StackLayout>
        <Entry Text="{Binding ToastMessage}"
               Placeholder="Type your toast message..." />

        <Button Text="Show Short Toast"
                Command="{Binding ShowShortToastCommand}" />

        <Button Text="Show Long Toast"
                Command="{Binding ShowLongToastCommand}" />
    </StackLayout>

</ContentPage>